{
  "name": "koa-typescript-starter",
  "version": "1.0.3",
  "description": "A starter/seed for KOA2/TypeScript.",
  "main": "app.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "npm run lint && node_modules/typescript/bin/tsc",
    "watch": "nodemon --watch 'app/**/*' -e ts --exec 'ts-node' ./app/app.ts",
    "lint": "eslint .",
    "fix": "eslint . --fix",
    "image:build": "docker build --tag koa-typescript-starter .",
    "image:run": "docker run --rm -ti -p 3000:3000 koa-typescript-starter",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wac2007/case.git"
  },
  "author": "Wallace Coelho",
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "axios": "^0.21.0",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-router": "^9.4.0",
    "lodash": "^4.17.10"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.4",
    "@types/chai-http": "^3.0.5",
    "@types/jest": "^26.0.15",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-bunyan-logger": "^2.1.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/koa__cors": "^2.2.3",
    "@types/lodash": "^4.14.116",
    "@types/node": "^14.14.2",
    "@types/source-map-support": "^0.5.3",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.12.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.1",
    "nodemon": "^1.18.3",
    "nyc": "^11.9.0",
    "onchange": "^7.1.0",
    "serve": "^11.3.2",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.2",
    "ts-node": "^6.2.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "excludes": [
      "**/*.d.ts",
      "./test/**/*"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
